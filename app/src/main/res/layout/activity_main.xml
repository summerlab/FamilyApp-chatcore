<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="mainVM"
            type="com.ivollo.familychat.MainVM" />

        <variable
            name="friendVM"
            type="com.ivollo.chatcore.binding.FriendVM" />

        <variable
            name="navigator"
            type="com.ivollo.familychat.Navigator" />
    </data>

    <carbon.widget.LinearLayout
        android:id="@id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{navigator.idCurrentPage == @layout/page_test ? View.VISIBLE : View.GONE}">

                <include
                    layout="@layout/page_test"
                    bind:vm="@{mainVM}" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="@{navigator.idCurrentPage == @layout/page_contacts ? View.VISIBLE : View.GONE}">

                <include
                    layout="@layout/page_contacts"
                    bind:vm="@{friendVM}" />
            </FrameLayout>

        </FrameLayout>

        <carbon.widget.LinearLayout
            android:id="@+id/navigator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <carbon.widget.LinearLayout
                android:id="@+id/navigate_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:onClick="@{navigator.navigate}"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:materialIcon="message_text_outline"
                    app:materialIconSize="@dimen/dp_16" />

                <carbon.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家书" />
            </carbon.widget.LinearLayout>

            <carbon.widget.LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:onClick="@{navigator.navigate}"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:materialIcon="message_text_outline"
                    app:materialIconSize="@dimen/dp_16" />

                <carbon.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时光" />
            </carbon.widget.LinearLayout>

            <carbon.widget.LinearLayout
                android:id="@+id/navigate_test"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{navigator.navigate}"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:materialIcon="message_text_outline"
                    app:materialIconSize="@dimen/dp_16" />

                <carbon.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家事" />
            </carbon.widget.LinearLayout>

            <carbon.widget.LinearLayout
                android:id="@+id/navigate_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="@{navigator.navigate}"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:materialIcon="message_text_outline"
                    app:materialIconSize="@dimen/dp_16" />

                <carbon.widget.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我" />
            </carbon.widget.LinearLayout>
        </carbon.widget.LinearLayout>
    </carbon.widget.LinearLayout>


</layout>