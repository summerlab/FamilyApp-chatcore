<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.ivollo.chatcore.binding.FriendVM"/>
    </data>

    <carbon.widget.FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_dark">

        <!-- Toolbar -->
        <carbon.widget.FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ivollo.familychat.view.ToolbarBackButton style="@style/ToolbarIconButton.Back"/>

            <carbon.widget.TextView
                style="@style/Text.Inverse"
                android:text="@string/friend_add"/>

        </carbon.widget.FrameLayout>


        <carbon.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_16"
            android:background="@color/background_light"
            android:orientation="vertical"
            android:padding="@dimen/dp_16"
            app:carbon_cornerRadius="@dimen/dp_4"
            app:carbon_elevation="@dimen/dp_4">

            <carbon.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <net.steamcrafted.materialiconlib.MaterialIconView
                    style="@style/EditTextIcon"
                    app:materialIcon="cellphone_android"/>

                <carbon.widget.EditText
                    android:id="@+id/login"
                    style="@style/EditText"
                    android:hint="@string/friend_phone_hint"
                    android:inputType="number"
                    android:maxLength="11"
                    app:bindEditText="@{vm.inputFriendPhone}"
                    app:carbon_floatingLabel="true"/>

                <net.steamcrafted.materialiconlib.MaterialIconView
                    android:id="@+id/hide_keyboard"
                    style="@style/IconButton"
                    app:materialIcon="keyboard_off"
                    app:materialIconColor="@color/check_icon_unchecked"/>

            </carbon.widget.LinearLayout>

            <carbon.widget.Button
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_8"
                android:enabled="@{vm.btnEnabled}"
                android:minWidth="@dimen/dp_128"
                android:onClick="@{vm.onFriendAddSubmit}"
                android:text="@{vm.btnAddTxt}"
                app:carbon_cornerRadius="@dimen/dp_8"/>

        </carbon.widget.LinearLayout>

        <include layout="@layout/company_footer"/>
    </carbon.widget.FrameLayout>
</layout>